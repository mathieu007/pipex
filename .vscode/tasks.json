{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "pipex",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Werror",
				"-Wextra",
				"-Wall",
				"-I${workspaceFolder}/include/",
				"-I${workspaceFolder}/libft/include/",
				"${workspaceFolder}/src/common/*.c",
				"${workspaceFolder}/src/pipex/*.c",
				"${workspaceFolder}/libft/src/**/*.c",
				"${workspaceFolder}/libft/src/**/**/*.c",
				"${workspaceFolder}/libft/src/*.c",
				"-o",
				"${workspaceFolder}/pipex"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}